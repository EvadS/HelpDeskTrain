@model HelpDeskTrain.Models.User

@{
    ViewBag.Title = "Create user";
}


@using (Html.BeginForm("Create", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Новый пользователь</legend>    

         <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "введите ФИО  пользователя" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

          <div class="form-group">
            @Html.LabelFor(m => m.Login, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Login, new { @class = "form-control", placeholder = "введите логин  пользователя" })
                @Html.ValidationMessageFor(model => model.Login)
            </div>
        </div>

         <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "пароль для  пользователя" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>

         <div class="form-group">
            @Html.LabelFor(m => m.Position, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Position, new { @class = "form-control", placeholder = "должность  пользователя" })
                @Html.ValidationMessageFor(model => model.Position)
            </div>
        </div>


         <div class="form-group">
            @Html.LabelFor(m => m.DepartmentId, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.DepartmentId,ViewBag.Departments as SelectList,new { @class = "form-control", placeholder = "должность  пользователя" })
                @Html.ValidationMessageFor(model => model.DepartmentId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.RoleId, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.RoleId,ViewBag.Roles as SelectList,new { @class = "form-control", placeholder = "должность  пользователя" })
                @Html.ValidationMessageFor(model => model.RoleId)
            </div>
        </div>
  
         <div class="control-group">
		    <div class="controls">						 
				<input name="Submit" type="submit" id="submit" value="Создать" class="btn btn-success"/>
				<input type="reset" name="Reset"  class="btn" value="Отмена"/>
			</div>
		</div>  
       
    </fieldset>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
